<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/offer_item_bg"
    android:clickable="true"
    android:focusable="true">

    <TextView
        android:id="@+id/placeholder1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/skeleton_textview"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/placeholder2"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/placeholder2"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/skeleton_image"
        android:clickable="false"
        android:text=""
        android:textColor="@android:color/white"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/placeholder3"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:text=""
        android:textColor="#7F70DF"
        android:textSize="12sp"
        android:textStyle="bold"
        android:background="@drawable/skeleton_textview"
        app:layout_constraintStart_toEndOf="@+id/placeholder2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/placeholder4"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/skeleton_textview"
        android:text=""
        android:textColor="#7F70DF"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/placeholder2"
        app:layout_constraintTop_toBottomOf="@+id/placeholder3" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:text="                                    "
        android:textAlignment="viewStart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/placeholder1"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>